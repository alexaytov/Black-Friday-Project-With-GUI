<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.staff.Earnings">
    <children>
        <JFXTabPane fx:id="tabPane" layoutY="70.0" prefHeight="284.0" prefWidth="600.0">
            <tabs>
                <Tab fx:id="dateTab" text="Date">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="240.0" prefWidth="600.0">
                            <children>
                                <JFXDatePicker fx:id="datePicker" layoutX="215.0" layoutY="28.0"
                                               promptText=" Pick a date"/>
                                <Text layoutX="86.0" layoutY="124.0" strokeType="OUTSIDE" strokeWidth="0.0"
                                      text="Calculated earnings: " textAlignment="CENTER">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </Text>
                                <JFXTextField fx:id="dateEarningsField" editable="false" layoutX="219.0" layoutY="104.0"
                                              prefHeight="25.0" prefWidth="164.0">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </JFXTextField>
                                <JFXButton layoutX="239.0" layoutY="172.0" onAction="#dateEarningsButton"
                                           prefHeight="46.0" prefWidth="121.0" style="-fx-background-color: #009688;"
                                           text="Calculate" textAlignment="CENTER">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </JFXButton>
                                <Text layoutX="86.0" layoutY="48.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Date:"
                                      textAlignment="CENTER">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </Text>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab fx:id="yearTab" text="Year">
                    <content>
                        <AnchorPane>
                            <children>
                                <VBox alignment="TOP_CENTER" layoutX="2.0" layoutY="31.0" prefHeight="200.0"
                                      prefWidth="600.0">
                                    <children>
                                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="537.0" spacing="65.0">
                                            <children>
                                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Enter year"
                                                      textAlignment="CENTER">
                                                    <font>
                                                        <Font size="14.0"/>
                                                    </font>
                                                </Text>
                                                <JFXTextField fx:id="yYearField" layoutX="274.0" layoutY="48.0"/>
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="442.0">
                                            <children>
                                                <Text strokeType="OUTSIDE" strokeWidth="0.0"
                                                      text="Calculated earnings: " textAlignment="CENTER">
                                                    <font>
                                                        <Font size="14.0"/>
                                                    </font>
                                                </Text>
                                                <JFXTextField fx:id="yearEarningsField" editable="false"/>
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                                            <children>
                                                <JFXButton onAction="#yearEarnings" prefHeight="46.0" prefWidth="121.0"
                                                           style="-fx-background-color: #009688;" text="Calculate"
                                                           textAlignment="CENTER">
                                                    <font>
                                                        <Font size="14.0"/>
                                                    </font>
                                                </JFXButton>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab fx:id="monthTab" text="Month">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="600.0">
                                    <children>
                                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="537.0" spacing="65.0">
                                            <children>
                                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Enter year"
                                                      textAlignment="CENTER">
                                                    <font>
                                                        <Font size="14.0"/>
                                                    </font>
                                                </Text>
                                                <JFXTextField fx:id="mYearField" layoutX="274.0" layoutY="48.0"/>
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="537.0" spacing="50.0">
                                            <children>
                                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Enter month"
                                                      textAlignment="CENTER">
                                                    <font>
                                                        <Font size="14.0"/>
                                                    </font>
                                                </Text>
                                                <JFXTextField fx:id="mMonthField" layoutX="274.0" layoutY="48.0"/>
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="442.0">
                                            <children>
                                                <Text strokeType="OUTSIDE" strokeWidth="0.0"
                                                      text="Calculated earnings: " textAlignment="CENTER">
                                                    <font>
                                                        <Font size="14.0"/>
                                                    </font>
                                                </Text>
                                                <JFXTextField fx:id="monthEarningsField" editable="false"/>
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                                            <children>
                                                <JFXButton onAction="#monthEarnings" prefHeight="46.0" prefWidth="121.0"
                                                           style="-fx-background-color: #009688;" text="Calculate"
                                                           textAlignment="CENTER">
                                                    <font>
                                                        <Font size="14.0"/>
                                                    </font>
                                                </JFXButton>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab fx:id="customPerdioTab" text="Custom Period">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <HBox layoutX="128.0" layoutY="35.0" prefHeight="100.0" prefWidth="344.0">
                                    <children>
                                        <Pane>
                                            <children>
                                                <JFXDatePicker fx:id="startDatePicker" layoutY="15.0"
                                                               promptText=" Pick a date"/>
                                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Start date"
                                                      textAlignment="CENTER">
                                                    <font>
                                                        <Font size="14.0"/>
                                                    </font>
                                                </Text>
                                            </children>
                                        </Pane>
                                        <Pane>
                                            <children>
                                                <JFXDatePicker fx:id="endDatePicker" layoutY="15.0"
                                                               promptText=" Pick a date"/>
                                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="End date"
                                                      textAlignment="CENTER">
                                                    <font>
                                                        <Font size="14.0"/>
                                                    </font>
                                                </Text>
                                            </children>
                                        </Pane>
                                    </children>
                                </HBox>
                                <Text layoutX="64.0" layoutY="155.0" strokeType="OUTSIDE" strokeWidth="0.0"
                                      text="Calculated earnings: " textAlignment="CENTER">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </Text>
                                <JFXTextField fx:id="customPeriodEarningsField" editable="false" layoutX="218.0"
                                              layoutY="120.0" prefHeight="25.0" prefWidth="164.0">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </JFXTextField>
                                <JFXButton layoutX="240.0" layoutY="175.0" onAction="#customPeriodEarnings"
                                           prefHeight="46.0" prefWidth="121.0" style="-fx-background-color: #009688;"
                                           text="Calculate" textAlignment="CENTER">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </JFXButton>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </JFXTabPane>
        <Text layoutX="244.0" layoutY="46.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Earnings"
              textAlignment="CENTER">
            <font>
                <Font size="30.0"/>
            </font>
        </Text>
        <HBox alignment="CENTER" layoutX="91.0" layoutY="354.0" prefHeight="40.0" prefWidth="418.0">
            <children>
                <JFXButton fx:id="backButton" onAction="#goBack" prefHeight="46.0" prefWidth="121.0"
                           style="-fx-background-color: ffff;" text="Back" textAlignment="CENTER">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </JFXButton>
            </children>
        </HBox>
    </children>
</AnchorPane>
